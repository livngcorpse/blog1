{
  "name": "anonblog-platform",
  "version": "1.0.0",
  "description": "A modern MERN stack blog platform with infinite nested replies",
  "main": "index.js",
  "scripts": {
    "install-all": "cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build"
  },
  "keywords": [
    "blog",
    "mern",
    "firebase",
    "nested-comments",
    "react",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.1"
  },
  "dependencies": {
    "mongodb": "^6.20.0"
  }
}
